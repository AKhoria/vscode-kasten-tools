{
  "name": "vscode-kasten-tools",
  "displayName": "vscode-kasten-tools",
  "description": "VSCODE extension for kasten",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:kasten.view"
  ],
  "extensionDependencies": [
    "ms-kubernetes-tools.vscode-kubernetes-tools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kasten.deleteEntry",
        "title": "Remove from tree",
        "category": "Kasten"
      },
      {
        "command": "kasten.addEntry",
        "title": "Add new ID",
        "category": "Kasten"
      },
      {
        "command": "kasten.addOpenArtifactWindow",
        "category": "Kasten",
        "title": "Add Artefact"
      },
      {
        "command": "kasten.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "images/refresh-w.svg",
          "dark": "images/refresh.svg"
        }
      }
    ],
    "views": {
      "kubernetesView": [
        {
          "id": "kasten.view",
          "name": "Kasten objects"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "kasten.refreshEntry",
          "when": "view == kasten.view",
          "group": "navigation"
        },
        {
          "command": "kasten.addEntry",
          "when": "view == kasten.view"
        }
      ],
      "view/item/context": [
        {
          "command": "kasten.deleteEntry",
          "when": "view == kasten.view"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  },
  "dependencies": {
    "vscode-kubernetes-tools-api": "^1.3.0"
  }
}
